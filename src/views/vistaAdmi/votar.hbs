<div class="row mt-3">
	{{#each candi}}
	<div class="col-md-3 col-sm-1">
		<div class="card">
			<form action="/vistaAdmi/votoR/{{candi._id}}?_method=PUT" method="POST">
				<input type="hidden" name="_method" value="PUT">
				<input type="hidden" name="nombre" value="{{nombre}}">
				<input type="hidden" name="apellido" value="{{apellido}}">
				<input type="hidden" name="grado" value="{{grado}}">
				<input type="hidden" name="curso" value="{{curso}}">
				<input type="hidden" name="lema" value="{{lema}}">
				<input type="hidden" name="votos" value="1">
				<div class="card-header">
					<h4 class="card-title d-flex justify-content-between align-items-center text-uppercase">{{lema}} </h4>
				</div>
				<div class="card-body">
					<h4 class="text-uppercase ">{{nombre}} {{apellido}} <span class="font-weight-bold"> {{grado}} Âª {{curso}}</span></h4>
					<button type="submit" class="btn btn-outline-primary" ><img src="/img/{{nombre}}-{{apellido}}.png"></button>
				</div>
			</form>
		</div>
	</div>
	{{else}}
	<div class="card mx-auto">
		<div class="card-body">
			<h2 class="display-1">Hola {{user.name}}</h2>
			<p class="lead">No hay candidatos creados</p>
			<a href="/vistaAdmi/add" class="btn btn-success btn-block">Desea crear uno</a>
		</div>
	</div>
	{{/each}}
	
	
</div>