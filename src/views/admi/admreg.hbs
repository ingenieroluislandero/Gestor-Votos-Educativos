<div class="row">
	<div class="col-md-4 mx-auto">
		<div class="card">
			<div class="card-header">
				<h1>Registrar Usuario Administrador</h1>
			</div>
		<div>
		<div class="card-body">
			<form action="/admi/admreg" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="nombre" placeholder="nombre" value={{name}}>
				</div>
				<div class="form-group">
					<input type="gmail" class="form-control" name="gmail" placeholder="gmail" value={{gmail}}>
				</div>
				<div class="form-group">
					<input type="password" class="form-control" name="password" placeholder="password" value={{password}}>
				</div>
				<div class="form-group">
					<input type="password" class="form-control" name="confir_password" placeholder="cofirmar password" value={{password}}>
				</div>
				<button class="btn btn-primary btn-block">
					Registrarse
				</button>
			</form>
		</div>
		</div>
		</div>
	</div>
</div>